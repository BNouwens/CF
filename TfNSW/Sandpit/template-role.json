                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ds.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": {
                    "Fn::Join": [
                        "",
