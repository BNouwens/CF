                        "PolicyName": {
                            "Ref": "Solution"
                        },
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "ec2:*"
                                    ],
                                    "Condition": {
                                        "StringEquals": {
                                            "ec2:ResourceTag/CostCentre": {
                                                "Ref": "CostCentre"
                                            },
                                            "ec2:Region": "ap-southeast-2"
                                        }
                                    },
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "ec2:CopyImage",
                                        "ec2:CopySnapshot",
                                        "ec2:CreateImage",
                                        "ec2:CreateKeyPair",
                                        "ec2:CreateNetworkInterface",
                                        "ec2:CreatePlacementGroup",
                                        "ec2:CreateSecurityGroup",
                                        "ec2:CreateSnapshot",
                                        "ec2:CreateImage",
                                        "ec2:DeregisterImage",
                                        "ec2:DeleteSnapshot",
                                        "ec2:ResetInstanceAttribute",
                                        "ec2:ResetNetworkInterfaceAttribute",
                                        "ec2:ResetSnapshotAttribute",
                                        "ec2:AssignPrivateIpAddresses",
                                        "ec2:CreateTags",
                                        "ec2:CreateVolume",
                                        "ec2:Authorize*",
                                        "ec2:Describe*",
                                        "ec2:ModifyInstanceAttribute",
                                        "ec2:AttachNetworkInterface",
                                        "ec2:DeleteNetworkInterface",
                                        "ec2:DetachNetworkInterface",
                                        "ec2:ModifyNetworkInterfaceAttribute",
                                        "ec2:GetConsoleOutput",
                                        "ec2:GetPasswordData",
                                        "ec2:ImportImage",
                                        "ec2:ImportInstance",
                                        "ec2:ImportKeyPair",
                                        "ec2:ImportSnapshot",
                                        "ec2:ImportVolume",
                                        "ec2:RunInstances"
                                    ],
                                    "Condition": {
                                        "StringEquals": {
                                            "ec2:Region": "ap-southeast-2"
                                        }
                                    },
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "ec2:RunInstances"
                                    ],
                                    "Resource": [
                                        "arn:aws:ec2:ap-southeast-2::image/ami-*"
                                    ]
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:GetBucketLocation",
                                        "s3:ListAllMyBuckets"
