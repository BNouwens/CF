{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates an AWS EC2 Instance",
    "Parameters": {
        "NameCode": {
            "Description": "",
            "Default": "ap01",
            "Type": "String"
        },
        "AWSKeyPairName": {
            "Description": "Select an existing key pair to use for connecting to your Instances",
            "Type": "AWS::EC2::KeyPair::KeyName",
            "MinLength": "1",
            "MaxLength": "255",
            "ConstraintDescription": "Select an existing EC2 Key Pair."
        },
        "SecurityGroupIds": {
            "Description": "Security Group IDs for Server",
            "Default": "",
            "Type": "List<AWS::EC2::SecurityGroup::Id>"
        },
        "AMI": {
            "Description": "AMI ID for Server",
            "Default": "ami-32312751",
            "Type": "String"
        },
        "Subnet": {
            "Description": "Select a private subnet for the instance",
            "Type": "AWS::EC2::Subnet::Id"
        },
        "Environment": {
            "Description": "Environment Code",
            "Default": "ppd",
            "Type": "String"
        },
        "Solution": {
            "Description": "Solution Code",
            "Default": "ppd",
            "Type": "String"
        },
        "CostCentre": {
            "Description": "Cost Code",
            "Default": "template",
            "Type": "String"
        }
    },
    "Resources": {
        "Server": {
            "Type": "AWS::EC2::Instance",
            "Metadata": {
                "Comment1": "Configure the bootstrap helpers to install the Apache Web Server",
                "Comment2": "Save website content to /var/www/html/index.php",
                "AWS::CloudFormation::Init": {
                    "configSets": {
                        "Install": [
                            "Install"
                        ]
                    },
                    "Install": {
                        "packages": {
                            "yum": {
                                "sssd": [],
                                "realmd": [],
                                "krb5-workstation": [],
                                "amazon-ssm-agent": []
                            }
                        },
                        "files": {
                            "/etc/resolv.conf": {
                                "content": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "options timeout:2 attempts:5\n",
                                            "; generated by /sbin/dhclient-script\n",
                                            "search ap-southeast-2.compute.internal\n",
                                            "nameserver 10.216.66.24\n",
                                            "nameserver 10.216.65.182\n"
                                        ]
                                    ]
                                },
                                "mode": "000600",
                                "owner": "root",
                                "group": "root"
                            }
                        },
                        "commands": {
                            "a-test": {
                                "command": "sudo sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/g' /etc/ssh/sshd_config"
                            },
                            "b-test2": {
                                "command": "sudo echo \"TEST\" >> /tmp/tmp.txt"
                            },
                            "c-hostname": {
                                "command": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "hostname ",
                                            {
                                                "Ref": "Solution"
                                            },
                                            {
                                                "Ref": "NameCode"
                                            }
                                        ]
                                    ]
                                }
                            },
                            "d-domainjoin": {
                                "command": "echo\"JoinDomain1\" | sudo realm join -U JoinDomain@sandpit.local --computer-ou=OU=Template,OU=TfNSW sandpit.local --verbose"
                            },
                            "e-sshdrestart": {
                                "command": "sudo service sshd restart"
                            },
                            "f-configsssd.conf": {
                                "command": "sudo sed -i 's/access_provider = ad/access_provider = simple/g' /etc/sssd/sssd.conf"
                            },
                            "g-configssd.conf2": {
                                "command": "sudo echo\"simple_allow_groups = temp\" >> /etc/sssd/sssd.conf"
                            },
                            "h-sssdrestart": {
                                "command": "sudo service sssd restart"
                            },
                            "i-protectresolv.conf": {
                                "command": "sudo chattr +i /etc/resolv.conf"
                            }
                        },
                        "services": {
                            "sysvinit": {
                                "ssd": {
                                    "enabled": "true",
                                    "ensureRunning": "true"
                                }
                            }
                        }
                    }
                }
            },
            "Properties": {
                "ImageId": {
                    "Ref": "AMI"
                },
                "InstanceType": "t2.micro",
                "KeyName": {
                    "Ref": "AWSKeyPairName"
                },
                "SubnetId": {
                    "Ref": "Subnet"
                },
                "SecurityGroupIds": {
                    "Ref": "SecurityGroupIds"
                },
                "IamInstanceProfile": "JoinDomain",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    {
                                        "Ref": "Solution"
                                    },
                                    {
                                        "Ref": "Environment"
                                    },
                                    {
                                        "Ref": "NameCode"
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Key": "CostCentre",
                        "Value": {
                            "Ref": "CostCentre"
                        }
                    },
                    {
                        "Key": "Solution",
                        "Value": {
                            "Ref": "Solution"
                        }
                    },
                    {
                        "Key": "cpm backup",
                        "Value": "tbd"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -xe\n",
                                "yum install -y aws-cfn-bootstrap\n",
                                "# Install the files and packages from the metadata\n",
                                "/opt/aws/bin/cfn-init -v ",
                                "         --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "         --resource Server",
                                "         --configsets Install ",
                                "         --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n"
                            ]
                        ]
                    }
                }
            }
        }
    }
}