{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Content Server LB and Security Groups",
    "Parameters": {
        "Solution": {
            "Type": "String"
        },
        "CostCentre": {
            "Type": "String"
        },
        "Environment": {
            "Description": "Environment Code",
            "Default": "dev",
            "Type": "String"
        },
        "InstanceId1": {
            "Description": "AP01 Instance ID (leave empty if no created yet)",
            "Default": "",
            "Type": "String"
        },
        "InstanceId2": {
            "Description": "AP02 Instance ID (leave empty if no created yet)",
            "Default": "",
            "Type": "String"
        },
        "InstanceId3": {
            "Description": "AP03 Instance ID (leave empty if no created yet)",
            "Default": "",
            "Type": "String"
        }
    },
    "Conditions": {
        "NoInstance1": {
            "Fn::Equals": [
                {
                    "Ref": "InstanceId1"
                },
                ""
            ]
        },
        "NoInstance2": {
            "Fn::Equals": [
                {
                    "Ref": "InstanceId2"
                },
                ""
            ]
        },
        "NoInstance3": {
            "Fn::Equals": [
                {
                    "Ref": "InstanceId3"
                },
                ""
            ]
        }
    },
    "Resources": {
        "contentLb": {
            "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
            "Properties": {
                "Scheme": "internet-facing",
                "Subnets": [
                    {
                        "Fn::ImportValue": "ControlledASubnet"
                    },
                    {
                        "Fn::ImportValue": "ControlledBSubnet"
                    },
                    {
                        "Fn::ImportValue": "ControlledCSubnet"
                    }
                ],
                "LoadBalancerAttributes": [
                    {
                        "Key": "idle_timeout.timeout_seconds",
                        "Value": "60"
                    }
                ],
                "SecurityGroups": [
                    {
                        "Ref": "contentLbSG"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "p2p",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "contentlb"
                                ]
                            ]
                        }
                    }
                ]
            }
        },
        "contentLbSG": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Content Server Load Balancer Security Group",
                "VpcId": {
                    "Fn::ImportValue": "VPC"
                },
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "IpProtocol": "tcp",
                        "FromPort": "443",
                        "ToPort": "443"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "IpProtocol": "tcp",
                        "FromPort": "80",
                        "ToPort": "80"
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "0",
                        "IpProtocol": "TCP",
                        "ToPort": "65535"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "p2p",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "contentlb"
                                ]
                            ]
                        }
                    }
                ]
            }
        },
        "contentSG": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Content Server Instance Security Group",
                "VpcId": {
                    "Fn::ImportValue": "VPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    "p2p",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "contentlb"
                                ]
                            ]
                        }
                    }
                ]
            }
        },
        
        "contentSGIngress": {
            "Type": "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId": {
                    "Ref": "contentSG"
                },
                "IpProtocol": "tcp",
                "FromPort": "80",
                "ToPort": "80",
                "SourceSecurityGroupId": {
                    "Fn::GetAtt": [
                        "contentLbSG",
                        "GroupId"
                    ]
                }
            }
        },
        "contentLbListener": {
            "Type": "AWS::ElasticLoadBalancingV2::Listener",
            "Properties": {
                "DefaultActions": [
                    {
                        "Type": "forward",
                        "TargetGroupArn": {
                            "Ref": "contentLbTG"
                        }
                    }
                ],
                "LoadBalancerArn": {
                    "Ref": "contentLb"
                },
                "Port": "80",
                "Protocol": "HTTP"
            }
        },
        "contentLbTG": {
            "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
            "Properties": {
                "HealthCheckIntervalSeconds": 30,
                "HealthCheckProtocol": "HTTP",
                "HealthCheckPort": 80,
                "HealthCheckPath": "/",
                "HealthCheckTimeoutSeconds": 5,
                "HealthyThresholdCount": 5,
                "Matcher": {
                    "HttpCode": "200"
                },
                "Name": {
                    "Fn::Join": [
                        "",
                        [
                            "p2p",
                            {
                                "Ref": "Environment"
                            },
                            "contentlb"
                        ]
                    ]
                },
                "Port": 80,
                "Protocol": "HTTP",
                "TargetGroupAttributes": [
                    {
                        "Key": "deregistration_delay.timeout_seconds",
                        "Value": "20"
                    }
                ],
                "UnhealthyThresholdCount": 2,
                "VpcId": {
                    "Fn::ImportValue": "VPC"
                },
                "Targets": [
                    {
                        "Fn::If": [
                            "NoInstance1",
                            {
                                "Ref": "AWS::NoValue"
                            },
                            {
                                "Id": {
                                    "Ref": "InstanceId1"
                                },
                                "Port": 80
                            }
                        ]
                    },
                    {
                        "Fn::If": [
                            "NoInstance2",
                            {
                                "Ref": "AWS::NoValue"
                            },
                            {
                                "Id": {
                                    "Ref": "InstanceId2"
                                },
                                "Port": 80
                            }
                        ]
                    },
                    {
                        "Fn::If": [
                            "NoInstance3",
                            {
                                "Ref": "AWS::NoValue"
                            },
                            {
                                "Id": {
                                    "Ref": "InstanceId3"
                                },
                                "Port": 80
                            }
                        ]
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Content Server"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "ALB": {
            "Description": "Content Server DNS Name",
            "Value": {
                "Fn::GetAtt": [
                    "contentLb",
                    "DNSName"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Join": [
                        "",
                        [
                            "p2p",
                            {
                                "Ref": "Environment"
                            },
                            "contentlbDNS"
                        ]
                    ]
                }
            }
        }
    }
}