{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates a Security Group for Access to Content Server Admin",
    "Parameters": {
        "Solution": {
            "Type": "String"
        },
        "CostCentre": {
            "Type": "String"
        }
    },
    "Resources": {
        "SG": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": {
                    "Ref": "Solution"
                },
                "VpcId": {
                    "Fn::ImportValue": "VPC"
                },
                "SecurityGroupIngress": [
                    {
                        "CidrIp": {
                            "Fn::ImportValue": "VPCCidrBlock"
                        },
                        "IpProtocol": "tcp",
                        "FromPort": "80",
                        "ToPort": "80"
                    }
                ]
            }
        }
    }
}