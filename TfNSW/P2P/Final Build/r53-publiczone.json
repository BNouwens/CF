{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates a Route53 hosted zone",
    "Parameters": {
        "Solution": {
            "Type": "String"
        },
        "DNSName": {
            "Type": "String",
            "Default": "p2p-sit.aws.hosting.transport.nsw.gov.au"
        },
        "CostCentre": {
            "Type": "String"
        }
    },
    "Resources": {
        "DNS": {
            "Type": "AWS::Route53::HostedZone",
            "Properties": {
                "HostedZoneConfig": {
                    "Comment": "Hosted Zone for P2P Environment"
                    
                },
                "Name": {
                    "Ref": "DNSName"
                }
                
            }
        }
    }
}