{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates a Security Group for Jumpbox RDP Access",
    "Parameters": {
        "Solution": {
            "Type": "String"
        },
        "CostCentre": {
            "Type": "String"
        }
    },
    "Resources": {
        "JumpboxRemoteAccess": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": {
                    "Ref": "Solution"
                },
                "VpcId": {
                    "Fn::ImportValue": "VPC"
                },
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "IpProtocol": "tcp",
                        "FromPort": "3389",
                        "ToPort": "3389"
                    },
                    {
                        "CidrIp": "0.0.0.0/0",
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22"
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "0",
                        "IpProtocol": "-1",
                        "ToPort": "65535"
                    }
                ]
            }
        }
    }
}